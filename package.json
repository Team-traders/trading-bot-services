{
  "name": "trading-bot-services",
  "version": "1.0.0",
  "license": "MIT",
  "description": "",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "./run_project.sh",
    "kill": "./kill_servers.sh",
    "docker:init": "./init_docker.sh",
    "docker:stop": "./stop_docker.sh",
    "dev:mooc:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/mooc/start.ts",
    "dev:mechoui:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/mechoui/start.ts",
    "dev:mechoui2:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/mechoui2/start.ts",
    "dev:mechoui3:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/mechoui3/start.ts",
    "dev:backoffice:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/backoffice/start.ts",
    "dev:example:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/example/start.ts",
    "windows:dev:mooc:backend": "set NODE_ENV=dev & ts-node-dev --ignore-watch node_modules  ./src/apps/mooc/start.ts",
    "windows:dev:mechoui:backend": "set NODE_ENV=dev & ts-node-dev --ignore-watch node_modules  ./src/apps/mechoui/start.ts",
    "windows:dev:mechoui2:backend": "set NODE_ENV=dev & ts-node-dev --ignore-watch node_modules  ./src/apps/mechoui/start.ts",
    "windows:dev:mechoui3:backend": "set NODE_ENV=dev & ts-node-dev --ignore-watch node_modules  ./src/apps/mechoui/start.ts",
    "windows:dev:backoffice:backend": "set NODE_ENV=dev & ts-node-dev --ignore-watch node_modules ./src/apps/backoffice/start.ts",
    "windows:dev:example:backend": "set NODE_ENV=dev & ts-node-dev --ignore-watch node_modules ./src/apps/example/start.ts",
    "lint": "prettier --write src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "start:mooc:backend": "NODE_ENV=production node dist/src/apps/mooc/start",
    "start:backoffice:backend": "NODE_ENV=production node dist/src/apps/backoffice/start",
    "test:features": "npm run test:mooc:backend:features",
    "test:mooc:backend:features": "NODE_ENV=test cucumber-js -p mooc_backend",
    "test:backoffice:backend:features": "NODE_ENV=test cucumber-js -p backoffice_backend",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "build:backoffice:frontend": "cd ./src/apps/backoffice/frontend && npm run build",
    "dev:command:mooc:rabbitmq": "ts-node-dev src/apps/mooc/command/runConfigureRabbitMQCommand",
    "dev:command:backoffice:rabbitmq": "ts-node-dev src/apps/backoffice/command/runConfigureRabbitMQCommand",
    "dev:command:mechoui:rabbitmq": "ts-node-dev src/apps/mechoui/command/runConfigureRabbitMQCommand",
    "command:mooc:rabbitmq": "NODE_ENV=production ts-node src/apps/mooc/command/runConfigureRabbitMQCommand",
    "command:backoffice:rabbitmq": "NODE_ENV=production ts-node src/apps/backoffice/command/runConfigureRabbitMQCommand",
    "command:example:rabbitmq": "NODE_ENV=production ts-node src/apps/example/command/runConfigureRabbitMQCommand",
    "command:mechoui:rabbitmq": "NODE_ENV=dev ts-node src/apps/mechoui/command/runConfigureRabbitMQCommand",
    "command:mechoui2:rabbitmq": "NODE_ENV=dev ts-node src/apps/mechoui2/command/runConfigureRabbitMQCommand",
    "command:mechoui3:rabbitmq": "NODE_ENV=dev ts-node src/apps/mechoui3/command/runConfigureRabbitMQCommand",
    "windows:command:mooc:rabbitmq": "ts-node src/apps/mooc/command/runConfigureRabbitMQCommand",
    "windows:command:backoffice:rabbitmq": "ts-node src/apps/backoffice/command/runConfigureRabbitMQCommand",
    "windows:command:example:rabbitmq": "ts-node src/apps/example/command/runConfigureRabbitMQCommand",
    "windows:command:mechoui:rabbitmq": "ts-node src/apps/mechoui/command/runConfigureRabbitMQCommand",
    "windows:command:mechoui2:rabbitmq": "ts-node src/apps/mechoui2/command/runConfigureRabbitMQCommand",
    "windows:command:mechoui3:rabbitmq": "ts-node src/apps/mechoui3/command/runConfigureRabbitMQCommand"
  },
  "dependencies": {
    "amqplib": "^0.10.5",
    "bson": "^6.10.0",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "mongodb": "^6.11.0",
    "node-dependency-injection": "^2.6.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/convict": "^6.1.6",
    "@types/cors": "^2.8.17",
    "@types/cucumber": "^6.0.1",
    "@types/express": "^4.17.21",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.24",
    "@types/node": "^22.9.3",
    "@types/supertest": "^2.0.10",
    "autoprefixer": "^10.4.7",
    "cucumber": "^6.0.5",
    "faker": "^5.5.3",
    "husky": "^5.1.3",
    "jest": "^28.1.1",
    "lint-staged": "10.5.4",
    "prettier": "^3.3.3",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0"
  }
}